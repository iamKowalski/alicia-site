<!DOCTYPE html>
<html lang="en">

<%- include('../header/header.ejs') %>

<body class="" id="site_body">
    <div class="wrapper">
        <div class="sidebar">
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li>
                        <a href="/">
                            <i class="tim-icons icon-align-center"></i>
                            <p>Início</p>
                        </a>
                    </li>
                    <% if (logged) { %>
                    <li class="active">
                        <a href="/profile">
                            <i class="tim-icons icon-single-02"></i>
                            <p>Meu Perfil</p>
                        </a>
                    </li>
                    <li>
                        <a href="/find">
                            <i class="tim-icons icon-zoom-split"></i>
                            <p>Procurar usuário</p>
                        </a>
                    </li>
                    <li>
                        <a href="/guilds">
                            <i class="tim-icons icon-link-72"></i>
                            <p>Servidores<p>
                        </a>
                    </li>
                    <% } else { %>
                    <% } %>
                    <li>
                      <a href="/invite">
                      <i class="tim-icons icon-wifi"></i>
                      <p>Convite<p>
                      </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <%- include('../partials/navbar.ejs') %>
            <div class="content">
                <div class="row">
                    <div class="col-lg-18 col-md-12">
                        <div class="card card-user">
                            <div class="card-body">
                                <p class="card-text">
                                    <div class="author">
                                        <div class="block block-one"></div>
                                        <div class="block block-two"></div>
                                        <div class="block block-three"></div>
                                        <div class="block block-four"></div>
                                        <a>
                                            <img class="avatar" src="<%- avatar %>" alt="<%- tag %>">
                                            <h5 class="title"><%- tag %></h5>
                                        </a>
                                        <p class="description">
                                          <img src="<%- profUser.presence.game ? profUser.presence.game.type === 2 ? profUser.presence.game.name === "Spotify" ? profUser.presence.game.assets.largeImageURL  : null : profUser.presence.game.assets.largeImageURL  : null %>" style="border-radius: 50%; width: 35px; heigth: 35px;"  alt="<%- profUser.presence.game ? profUser.presence.game.type === 2 ? profUser.presence.game.name === "Spotify" ? `Ouvindo: ${profUser.presence.game.details} por ${profUser.presence.game.state.replace(/;/g,',')}`  : null : `Jogando: ${profUser.presence.game.name}` : null %>">
                                          <%- profUser.presence.game ? profUser.presence.game.type === 2 ? profUser.presence.game.name === "Spotify" ? `Ouvindo: ${profUser.presence.game.details} por ${profUser.presence.game.state.replace(/;/g,',')}`  : null : `Jogando: ${profUser.presence.game.name}` : null %>
                                      </p>
                                        <div class="card-description">
                                            <%- db_user.personalText.replace("%command%", '"@Alícia about"') %>
                                        </div>
                                    </div>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/assets/js/core/jquery.min.js"></script>
    <script src="/assets/js/core/popper.min.js"></script>
    <script src="/assets/js/core/bootstrap.min.js"></script>
    <script src="/assets/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <script src="/assets/js/plugins/chartjs.min.js"></script>
    <script src="/assets/js/plugins/bootstrap-notify.js"></script>
    <script src="/assets/js/black-dashboard.min.js?v=1.0.0"></script>
    <script src="/assets/js/helper.js"></script>
</body>

</html>